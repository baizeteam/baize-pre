{
  "compilerOptions": {
    "target": "es6",
    "outDir": "bin",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "sourceMap": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
