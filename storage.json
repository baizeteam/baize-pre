{
  "installs": [
    {
      "plugin": "prettier",
      "config": {
        "file": ".prettierrc",
        "json": {
          "printWidth": 80,
          "tabWidth": 2,
          "useTabs": false,
          "singleQuote": false,
          "semi": false,
          "trailingComma": "none",
          "bracketSpacing": true,
          "htmlWhitespaceSensitivity": "ignore"
        }
      },
      "dev": true,
      "pkg": {
        "scripts": {
          "format": "prettier --write ."
        }
      }
    },
    {
      "plugin": "husky",
      "config": {
        "file": ".husky/pre-commit",
        "json": "ab"
      },
      "dev": true,
      "pkg": {
        "lint-staged": {
          "**/*.{js,ts,json}": "prettier --write ."
        },
        "scripts": {
          "lint-staged": "lint-staged"
        }
      }
    },
    {
      "plugin": "typescript",
      "config": {
        "file": "tsconfig.json",
        "json": {
          "compilerOptions": {
            "target": "es6",
            "outDir": "bin",
            "module": "esnext",
            "esModuleInterop": true,
            "moduleResolution": "node",
            "rootDir": "src"
          },
          "include": [
            "src"
          ],
          "exclude": [
            "node_modules"
          ]
        }
      },
      "dev": true,
      "pkg": {}
    }
  ]
}